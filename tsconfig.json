{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "react",
    "lib": ["ES2015"],
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "noEmit": true,
    "checkJs": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/TimeGridHeaderAllDay.js",
    "./src/TimeGutterAllDay.js",
    "./src/TimeGridHeaderAllDay.js"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}
